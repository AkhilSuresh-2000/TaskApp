<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TodoApp.Addtask">
    <ContentPage.Content>
        <Grid Grid.Column="1">
        <StackLayout>
                <StackLayout Orientation="Horizontal" Margin="20">
                    <Label Text="Task" HorizontalOptions="Start" FontSize="20" />
                    <Entry x:Name="TaskEntry"  Placeholder="Enter Task" HorizontalOptions="CenterAndExpand"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal" Margin="20">
                    <Label Text="Priority" HorizontalOptions="Start" FontSize="20" />
                    <Entry x:Name="PriorityEntry" Placeholder="Enter priority" HorizontalOptions="CenterAndExpand"/>
                </StackLayout>
                <Button x:Name="SaveTask" Text="Save" Clicked="SaveTask_Clicked"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>